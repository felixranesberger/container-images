{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "Stylelint",
      "matchPackagePatterns": [
        "stylelint"
      ]
    },
    {
      "groupName": "ESLint",
      "matchPackagePatterns": [
        "eslint"
      ]
    },
    {
      "groupName": "Vite",
      "matchPackagePatterns": [
        "vite"
      ]
    }
  ]
}
